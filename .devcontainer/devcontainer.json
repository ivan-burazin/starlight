{
  "name": "Contribute to Starlight",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": ["--user=sudo"],
  "postCreateCommand": "pnpm install",
  "waitFor": "postCreateCommand",
  "customizations": {
    "codespaces": {
      "openFiles": ["CONTRIBUTING.md"]
    },
    "vscode": {
      "extensions": ["astro-build.astro-vscode", "esbenp.prettier-vscode"]
    }
  }
}
